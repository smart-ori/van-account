/**index.wxss**/
page{
    background-color: #fff;
    font-family: KaiTi;
}
.body{
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.self{
  width: 100%;
  height: 160rpx;
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  background-image: radial-gradient(circle at left top,#1F8C31, #4ECC62);
  color: #fff;
}
.self-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.total-info{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  justify-content: center;
  height: 100%;
  margin-left: 20rpx;
}
.total-info .time{
  background-color: #64BF73;
  padding-left: 15rpx;
  border-radius: 100rpx;
  margin: 10rpx 0;
}
.total-info .box{
  display: flex;
}
.total-info .box>view{
  margin-right: 20rpx;
}

.self .head-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.self .name{
  font-size: 14px;
}

.hr{
  margin-top: 5rpx;
  background-color: #68D87A;
  height: 10rpx;
}
.user-list {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  background-color: #f8f8f8;
}

.user-list .item{
  width: 187.5rpx;
  height: 187.5rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #444;
  margin-top: 10rpx;
}
.user-list .item .content{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
  box-shadow: 0 0 10px #999;
  background-image: radial-gradient(at 50% 78%, #4dfd47 8%,#23e621,#028500);
}
.user-list .item.woman .content {
  background-image: radial-gradient(at 50% 78%, #FC77DA 8%,#DC3CB3,#AF1487);
}
.user-list .item .content .name{
  width: 111rpx;
  height: 80rpx;
  border-radius: 50%;
  color: #555;
  font-weight: 900;
  font-size: 12px;
  background-image: linear-gradient(180deg, rgba(255,255,255,1),  rgba(255,255,255,0) 90%);
  margin-top: 8rpx;
  text-align: center;
  line-height: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.user-list .item .content .tem{
  padding: 2rpx 0;
  width: 100%;
  font-size: 14px;
  background-image: radial-gradient(at 50% 78%, yellow 8%, orange,red);
  color: #3163D1;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}


.no-staff{
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #999;
}
.sigh{
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
  text-align: center;
  line-height: 200rpx;
  border: solid 8px #666;
  border-radius: 50%;
  font-size: 60px;
  color: #444;
  font-weight: 900;
}
.no-staff .info {
  margin: 40rpx 0;
  color: #333;
  font-size: 14px;
}

.loading{
  height: 100vh;
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
