/* pages/edit/edit.wxss */
page{
  background-color: #f8f8f8;
}
.overview{
  display: flex;
  background-image: radial-gradient(circle at left top,#1F8C31, #4ECC62);
  color: #fff;
  font-size: 14px;
  padding: 10rpx;
}
.overview .man-total,.overview .woman-total{
  margin-left: 30rpx;
}
.user-list{
  width: 100%;
  display: felx;
  flex-direction: column;
  overflow: auto;
  height: calc(100vh - 180rpx);
}
.user-list .item{
  display: flex;
  font-size: 14px;
  margin: 10rpx 0;
  padding: 20rpx;
  border-bottom: solid 1px #eee;
  background-color: #fff;
  border-radius: 5px;
  border: solid 1px #fff;
}
.user-list .item.active{
  border-color: #1AAD19;
  box-shadow: inset 0 0 10px #1AAD19;
  box-sizing: border-box;
}
.user-list .item .user{
  display: flex;
  align-items: center;
  width: 70%;
}
.user-list .item .user .info{
  display: flex;
  flex: 1;
  margin-left: 20rpx;
}
.user-list .item .check{
  display: flex;
  flex: 1;
  justify-content: space-around;
  align-items: center;
}
.user-list .item .check .info{
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  background-color: #eee;
  color: #666;
  border-radius: 50%;
  border: solid 1px #666;
}
.user-list .item .check .info.active{
  background-color: #FF1472;
  color: #fff;
  border-color: #E80B63;
  box-shadow: 0 0 20rpx #FF1472,0 0 20rpx #FF1472;
}
.submit{
  width: 100%;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
}
.submit button{
  font-size: 14px;
  flex: 1;
  margin: 0 10rpx;
}